{
  "name": "pancake-frontend",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "apis/*",
    "scripts"
  ],
  "packageManager": "pnpm@8.6.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "turbo run dev --filter=web... --concurrency=23",
    "dev:aptos": "pnpm turbo run dev --filter=aptos-web... --concurrency=20",
    "dev:blog": "pnpm turbo run dev --filter=blog...",
    "dev:bridge": "pnpm turbo run dev --filter=bridge... --concurrency=16",
    "dev:games": "pnpm turbo run dev --filter=games... --concurrency=20",
    "storybook": "turbo run start --filter=uikit...",
    "build:storybook": "turbo run build:storybook --filter=uikit...",
    "build": "turbo run build --filter=web...",
    "build:blog": "turbo run build --filter=blog...",
    "build:aptos": "turbo run build --filter=aptos-web...",
    "build:bridge": "turbo run build --filter=bridge...",
    "build:games": "turbo run build --filter=games...",
    "build:packages": "turbo run build --filter=./packages/*",
    "start": "turbo run start --filter=web",
    "test:config": "pnpm turbo run test:config --filter=web...[HEAD^1]",
    "test:ci": "pnpm turbo run test --filter=[HEAD^1]",
    "lint": "turbo run lint --filter=web",
    "lint:report": "eslint --no-error-on-unmatched-pattern --max-warnings=0",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json}\"",
    "format:write": "prettier --write \"**/*.{js,jsx,ts,tsx,json}\"",
    "format:check:staged": "lint-staged",
    "e2e:ci": "turbo run build --filter=web...[HEAD^1] && turbo run integration-test --filter=e2e...[HEAD^1]",
    "updateLPsAPR": "pnpm turbo run build --filter=@kazamaswap/farms && NODE_PATH=./apps/web/src tsx --tsconfig ./apps/web/tsconfig.json scripts/updateLPsAPR.ts",
    "updateAptosLPsAPR": "pnpm turbo run build --filter=@kazamaswap/aptos-swap-sdk && NODE_PATH=./apps/aptos/src tsx --tsconfig ./apps/aptos/tsconfig.json  scripts/updateAptosLpsAPR/index.ts",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version && pnpm i --lockfile-only",
    "release-packages": "turbo run build --filter=./packages/* && changeset version && changeset publish",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@kazamaswap/eslint-config-pancake": "workspace:*",
    "@kazamaswap/tsconfig": "workspace:*",
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "@types/node": "^18.16.2",
    "eslint-plugin-address": "^0.0.2",
    "eslint-plugin-lodash": "^7.4.0",
    "husky": "^7.0.0",
    "jest": "^27.4.5",
    "lint-staged": "^12.3.4",
    "prettier": "^2.8.3",
    "serve": "^12.0.0",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "tilg": "^0.1.1",
    "tsx": "^3.12.6",
    "turbo": "1.10.2",
    "typescript": "5.2.2",
    "vitest": "^0.30.1",
    "wrangler": "^2.0.6"
  },
  "volta": {
    "node": "18.16.0"
  },
  "dependencies": {
    "@svgr/webpack": "^8.0.1",
    "axios": "^0.27.2",
    "emoji-picker-react": "^4.4.7",
    "chart.js": "^3.8.0",
    "chartjs-adapter-moment": "^1.0.0",
    "crypto": "^1.0.1",
    "encoding": "^0.1.13",
    "gif-picker-react": "^1.1.0",
    "kazama-defi-react-toasts": "1.0.5",
    "kazama-chat-toastify": "1.0.5",
    "linkifyjs": "^4.1.1",
    "linkify-react": "^4.1.1",
    "linkify-plugin-mention": "^4.1.1",
    "linkify-plugin-hashtag": "^4.1.1",
    "moment": "^2.29.3",
    "react-chartjs-2": "^4.2.0",
    "react-icons": "^4.7.1",
    "react-jazzicon": "^1.0.4",

    "socket.io-client": "^4.5.4",
    "ws": "^8.13.0",
    "uuidv4": "^6.2.13"
  }
}
